{
  "name": "arlecchino",
  "version": "0.0.1",
  "description": "YAML based e2e runner",
  "bin": {
    "arlecchino": "built/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepare": "rimraf built && tsc"
  },
  "keywords": [
    "puppeteer",
    "yaml",
    "e2e"
  ],
  "author": "Quramy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Quramy/arlecchino.git"
  },
  "homepage": "https://github.com/Quramy/arlecchino",
  "devDependencies": {
    "@types/jest": "^23.3.4",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "@types/js-yaml": "^3.11.2",
    "@types/mkdirp": "^0.5.2",
    "@types/mustache": "^0.8.31",
    "@types/puppeteer": "^1.8.0",
    "@types/rimraf": "^2.0.2",
    "@types/yargs": "^12.0.1",
    "js-yaml": "^3.12.0",
    "mkdirp": "^0.5.1",
    "mustache": "^3.0.0",
    "puppeteer": "^1.8.0",
    "rimraf": "^2.6.2",
    "yaml-ast-parser": "^0.0.41",
    "yargs": "^12.0.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(integration-test/.*|(src/.*\\.test))\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.d\\.ts$",
      "built/.*"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ]
  }
}
